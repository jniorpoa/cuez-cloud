################################################################################
# Cuez Cloud - Example Variables
# Copy this file to terraform.tfvars and fill in your values
################################################################################

# AWS Configuration
aws_region   = "sa-east-1"
project_name = "cuez-cloud"
environment  = "production"

# VPC Configuration
vpc_cidr          = "10.15.0.0/16"
subnet_cidr       = "10.15.0.0/24"
availability_zone = "sa-east-1a"

# EC2 Configuration
vmix_instance_type   = "g4dn.2xlarge"
cuez_instance_type   = "t3.large"
ebs_volume_size      = 500
ebs_volume_type      = "gp3"
enable_nvidia_driver = true

# REQUIRED: Create a key pair in AWS Console and add the name here
key_pair_name = "YOUR_KEY_PAIR_NAME"

# Allowlist IPs (defaults provided, adjust if needed)
# algar_cidr      = "189.112.178.128/28"
# mundivox_cidr_1 = "187.16.97.64/27"
# mundivox_cidr_2 = "187.102.180.144/28"
# embratel_cidr   = "200.166.233.192/28"
# samm_cidr       = "201.87.158.160/28"

# Additional tags
tags = {
  Owner      = "YOUR_NAME"
  CostCenter = "YOUR_COST_CENTER"
}
